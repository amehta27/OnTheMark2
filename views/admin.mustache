    <link rel="stylesheet" href="admin.css">

</head>

<body>
{{>adminNav}}
<h2><u>Admin Page</u></h2>
</br>
<form action='/filter' method="POST">
    <select class="adminDropBox" required name="category">
        <option value="" diabled selected>Complaint Category</option>
        <option value="view_all">All Complaints</option>
        <option value="signal_problem">Signal Problem</option>
        <option value="pothole">Pothole</option>
        <option value="flooding">Flooding</option>
        <option value="street_light">Street Light</option>
        <option value="missing_sign">Missing Sign</option>
        <option value="faded_markings">Faded Road Markings</options>
    </select>
    <button type="submit">Sort</button>
</form>

<h4>{{headerCat}}</h4>
</br>
<ul>
{{#result}}
<div>
<li>
<form action="/delete" method="post">
<div class= "listbox">
<input type="hidden" name="id" value={{id}}>
  <div class="div1">
  <label>Category:</label>
  <p>  {{category}}</p>
  </div>

  <div class ="div1">
  <label>Description:</label>
  <p>{{description}}</p>
  </div>

  <div class ="div1">
  <label>Latitude:</label>
  <p>{{lat}}</p>
  </div>

  <div class ="div1">
  <label>Longitude:</label>
  <p>{{long}}</p>
  </div>
  <div class="div2">
  <button type="submit" style="inline-block" class="btn btn-link">Delete</button>
  </div>
    </form>
</div>
</li>
</div>
{{/result}}
</ul>
</body>
